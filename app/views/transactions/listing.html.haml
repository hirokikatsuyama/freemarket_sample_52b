= render partial: "layouts/header"
.link__list
  %ul
    %li
      - breadcrumb :listing_transactions
      = breadcrumbs separator: " #{content_tag(:i, '', :class=>'fas fa-angle-right gretel__icon')} "
.mypage__wrapper.clearfix
  .render-side-bar
    = render partial: "users/side"
    .listing
      %section.listing__buy
        %h2.listing__buy__head
          出品した商品
        .listing__item
          = link_to listing_transactions_path, class: "listing__item__list" do
            %h3 出品中
            .listing-contents
            - @listing.each do |listing|
              .listing-contents__list
                - if listing.present? && current_user.id == listing.seller_id
                  .listing-contents__list--image
                    ※イメージ
                  .listing-contents__list__text
                    .listing-contents__list__text--title
                      = listing.item.name
                    .listing-contents__list__text--status
                      出品中
                - else
                  .listing-contents__list__unfound
                    取引中の商品がありません
          = link_to in_progress_transactions_path, class: "listing__item__in_progress" do
            %h3 取引中
          = link_to completed_transactions_path, class: "listing__item__completed" do
            %h3 売却済み
= render partial: "layouts/banner"
= render partial: "layouts/footer"




