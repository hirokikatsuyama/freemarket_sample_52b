= stylesheet_link_tag '/devise/sessions/new', media: 'all', 'data-turbolinks-track' => true
.sign-in
  .sign-in__content
    .sign-in__content__header
      %p アカウントをお持ちでない方はこちら
      %button.button-registration{:href => "#", :type => "button"} 新規会員登録
    %form.sign-in__content__main
      .sign-in__content__main__button
        %button.button-facebook{:href => "#", :type => "button"} Facebookでログイン
        %button.button-google{:href => "#", :type => "button"} Googleでログイン
      .sign-in__content__main__input
        %input.sign-in__content__main__mail{:placeholder => "メールアドレス"}/
        %input.sign-in__content__main__password{:placeholder => "パスワード"}/
        %div
          .robot
          %button.button-log-in{:href => "#", :type => "button"} ログイン
          = link_to "パスワードをお忘れの方", "#", class: "link-forget-password"
