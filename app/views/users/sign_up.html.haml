.sign-up
  = render partial: "layouts/sign_header"
  .sign-up__content
    .sign-up__content__header
      %p 新規会員登録
    .sign-up__content__link
      %button.button-mail{onclick: "location.href='/users/registration_base'"} メールアドレスで登録
      %button.button-facebook{onclick: "location.href='/auth/facebook'", type: "button"} Facebookで登録
      %button.button-google{onclick: "location.href='/auth/google_oauth2'", type: "button"} Googleで登録
  = render partial: "/./users/registration_footer"