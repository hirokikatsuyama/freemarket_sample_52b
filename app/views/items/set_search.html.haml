.categories__show.clearfix
  .categories__show__inner
    .clearfix
      .categories__show__box.clearfix
        -@products.each do |item|
          .categories__show__box__item
            =link_to "#" do
              .categories__show__image
                = image_tag (item.images.first.image.to_s)
              .categories__show__body
                %h3.categories__show__body__name=item.name
                .categories__show__body__details
                  .categories__show__body__details__price=converting(item.price)
                %p
                  （税込）
= render partial: "layouts/banner"
